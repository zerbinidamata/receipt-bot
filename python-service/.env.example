# ===========================================
# Python Scraper Service Environment Variables
# ===========================================
# Copy this file to .env and fill in values
# For Railway: set these as environment variables in the Railway dashboard

# -----------------
# Transcription Provider
# -----------------
# Options: elevenlabs (default, recommended), google-stt, whisper
TRANSCRIPTION_PROVIDER=elevenlabs

# -----------------
# ElevenLabs (default provider - get from https://elevenlabs.io)
# -----------------
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# -----------------
# Google Cloud (optional - for google-stt provider)
# -----------------
# Local development: path to service account JSON
# GOOGLE_CLOUD_CREDENTIALS_PATH=/path/to/google-cloud-credentials.json
# Railway deployment: paste entire JSON content as a single line
# GOOGLE_APPLICATION_CREDENTIALS_JSON={"type":"service_account","project_id":"..."}

# -----------------
# OpenAI (optional - for whisper provider)
# -----------------
# OPENAI_API_KEY=your_openai_api_key_here

# -----------------
# gRPC Server Configuration
# -----------------
GRPC_PORT=50051
GRPC_MAX_WORKERS=10

# -----------------
# Logging & Temp Files
# -----------------
LOG_LEVEL=INFO
TEMP_DIR=/tmp/recipe-bot
