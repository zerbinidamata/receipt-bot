# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_DEBUG=false

# LLM Provider Configuration
# Options: gemini, openai, anthropic
LLM_PROVIDER=gemini
LLM_MODEL=gemini-1.5-flash

# LLM API Keys (provide the one matching your LLM_PROVIDER)
GEMINI_API_KEY=your_gemini_api_key_here
# OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Firebase Configuration
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CREDENTIALS_PATH=/path/to/firebase-credentials.json

# Python Service Configuration
PYTHON_SERVICE_URL=localhost:50051
PYTHON_SERVICE_TIMEOUT=300

# Transcription Provider Configuration (for Python service)
# Options: google-stt, whisper
TRANSCRIPTION_PROVIDER=google-stt
GOOGLE_CLOUD_CREDENTIALS_PATH=/path/to/google-cloud-credentials.json

# Application Configuration
APP_LOG_LEVEL=info
APP_PORT=8080
